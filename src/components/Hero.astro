---
interface Props {
  headline: string;
  subheadline?: string;
  ctaText?: string;
  ctaHref?: string;
  backgroundImage: string;
}

const {
  headline,
  subheadline,
  ctaText = 'BOOK NOW',
  ctaHref = '/book',
  backgroundImage,
} = Astro.props;
---

<section
  class="relative h-[600px] flex items-center bg-cover bg-center"
  style={`background-image: url('${backgroundImage}')`}
>
  <!-- Overlay -->
  <div class="absolute inset-0 bg-black/30"></div>

  <!-- Content -->
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-xl">
      <h1 class="font-headline text-5xl md:text-6xl font-bold text-white leading-tight mb-4">
        {headline}
      </h1>
      {subheadline && (
        <p class="font-body text-xl text-white mb-8">
          {subheadline}
        </p>
      )}
      <a
        href={ctaHref}
        class="inline-block bg-transparent border-2 border-white text-white font-body font-semibold text-sm px-8 py-3 hover:bg-white hover:text-text-primary transition-colors"
      >
        {ctaText}
      </a>
    </div>
  </div>
</section>
