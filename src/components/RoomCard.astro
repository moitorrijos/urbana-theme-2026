---
interface Props {
  image: string;
  title: string;
  category: string;
  price: number;
  href?: string;
}

const { image, title, category, price, href = '/rooms' } = Astro.props;
---

<article class="group bg-white shadow-md overflow-hidden">
  <!-- Image -->
  <div class="relative h-48 overflow-hidden">
    <img
      src={image}
      alt={title}
      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
    />
    <div class="absolute top-4 left-4">
      <span class="bg-sky-blue text-white font-body text-xs font-semibold px-3 py-1 uppercase">
        {category}
      </span>
    </div>
  </div>

  <!-- Content -->
  <div class="p-4">
    <h3 class="font-headline text-lg text-text-primary mb-2">
      {title}
    </h3>
    <div class="flex items-center justify-between">
      <p class="font-body text-medium-gray">
        From <span class="text-sky-blue font-semibold">${price}</span>/night
      </p>
      <a
        href={href}
        class="font-body text-sm text-sky-blue hover:text-sky-blue-light transition-colors font-semibold"
      >
        View Details
      </a>
    </div>
  </div>
</article>
