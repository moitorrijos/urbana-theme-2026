---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import BookingBar from '../components/BookingBar.astro';
import RoomsSection from '../components/RoomsSection.astro';
import Testimonial from '../components/Testimonial.astro';
---

<BaseLayout title="Home" currentPage="home">
  <Hero
    headline="YOUR PLACE TO STAY IN THE BIG CITY"
    subheadline="Starting at $145/night"
    ctaText="BOOK NOW"
    ctaHref="/book"
    backgroundImage="/urbana-hotel-view2.jpg"
  />
  <BookingBar />
  <RoomsSection />
  <Testimonial />
</BaseLayout>
